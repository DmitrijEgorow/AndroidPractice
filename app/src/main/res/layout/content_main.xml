<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/main_padding"
    tools:context=".MainActivity">



    <EditText
        android:id="@+id/customer_name"
        android:hint="@string/medley_team"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:autofillHints="name"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/customer_bid"
        android:hint="@string/medley_team"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:autofillHints="name"
        android:inputType="number" />

    <Button
        android:id="@+id/submit_bid"
        android:text="@string/match_teams"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"/>

    <TextView
        android:id="@+id/winner_name"
        android:text="@string/medley_team"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"/>

    <TextView
        android:id="@+id/winner_bid"
        android:text="@string/freestyle_team"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"/>



</LinearLayout>